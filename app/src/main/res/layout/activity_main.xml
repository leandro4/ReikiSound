<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/fondo"
    android:background="#41ccff"
    android:weightSum="1"
    android:keepScreenOn="true"
    android:touchscreenBlocksFocus="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/reiki" />

    <RelativeLayout
        android:id="@+id/rl_content_select"
        android:layout_below="@+id/imageView"
        android:layout_above="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time (minutes)"
            android:id="@+id/cuadro_lapso"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cuadro_lapso"
            android:layout_marginTop="16dp"
            android:id="@+id/numberPicker" />

        <CheckBox
            android:id="@+id/cb_cuenco"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/numberPicker"
            android:background="@drawable/cuenco"
            android:checked="true"
            android:layout_width="100dp"
            android:layout_height="70dp" />

        <CheckBox
            android:id="@+id/cb_triangle"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/numberPicker"
            android:background="@drawable/triangle"
            android:checked="false"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <CheckBox
            android:id="@+id/cb_koshi"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/numberPicker"
            android:background="@drawable/koshi"
            android:checked="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <CheckBox
            android:id="@+id/cb_enable_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Music"
            android:textColor="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/cb_cuenco"
            android:checked="false"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_below="@+id/imageView"
        android:layout_above="@+id/btn_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Remaining:\n 0s"
            android:id="@+id/chronometer"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_play"
        android:text="PLAY"
        android:textColor="#ffffff"
        android:background="@drawable/boton_play"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
