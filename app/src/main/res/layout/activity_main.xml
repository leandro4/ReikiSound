<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41ccff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/fondo"
        android:orientation="vertical"
        android:keepScreenOn="true"
        android:touchscreenBlocksFocus="false">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/reiki" />

        <LinearLayout
            android:id="@+id/rl_content_select"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time (minutes)"
                android:id="@+id/cuadro_lapso"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:id="@+id/numberPicker" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_cuenco"
                    android:layout_weight="1"
                    android:background="@drawable/cuenco"
                    android:checked="true"
                    android:layout_width="0dp"
                    android:layout_height="70dp" />

                <CheckBox
                    android:id="@+id/cb_triangle"
                    android:layout_weight="1"
                    android:background="@drawable/triangle"
                    android:checked="false"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_width="0dp"
                    android:layout_height="70dp" />

                <CheckBox
                    android:id="@+id/cb_koshi"
                    android:layout_weight="1"
                    android:background="@drawable/koshi"
                    android:checked="false"
                    android:layout_width="0dp"
                    android:layout_height="70dp" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_enable_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Music"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:checked="false"
                android:layout_gravity="center" />

        </LinearLayout>

        <TextView
            android:text="Remaining:\n 0s"
            android:id="@+id/chronometer"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_play"
                android:text="PLAY"
                android:textColor="#ffffff"
                android:background="@drawable/boton_play"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btn_donate"
                android:text="@string/donate_button"
                android:textColor="#ffffff"
                android:background="@drawable/boton_play"
                android:padding="12dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
