<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41ccff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/fondo"
        android:orientation="vertical"
        android:keepScreenOn="true"
        android:touchscreenBlocksFocus="false">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/reiki" />

        <LinearLayout
            android:id="@+id/rl_content_select"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_title"
                    android:id="@+id/cuadro_lapso"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

                <holauser.lea.holauser.ui.custom.NumberPickerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/numberPicker" />

            </LinearLayout>

            <holauser.lea.holauser.ui.custom.SoundSelectorView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume:"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

                <holauser.lea.holauser.ui.custom.NumberPickerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/volumePicker" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_enable_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_music"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:buttonTint="#ffffff"
                    android:checked="false"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/tvMusic"
                    android:text="Reiki Sound Music"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="@string/remaining"
            android:id="@+id/chronometer"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_play"
                android:src="@drawable/ic_play"
                android:background="@drawable/circle_play"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_donate"
                android:text="@string/donate_button"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@drawable/boton_play"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
