<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCuenco"
        android:background="@drawable/sound_state_selector"
        android:elevation="5dp"
        android:src="@drawable/state_cuenco"
        android:scaleType="centerInside"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <ImageView
        android:id="@+id/ivKoshi"
        android:background="@drawable/sound_state_selector"
        android:elevation="5dp"
        android:src="@drawable/state_koshi"
        android:scaleType="centerInside"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <ImageView
        android:id="@+id/ivTriangle"
        android:background="@drawable/sound_state_selector"
        android:elevation="5dp"
        android:src="@drawable/state_triangle"
        android:scaleType="centerInside"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />

</LinearLayout>