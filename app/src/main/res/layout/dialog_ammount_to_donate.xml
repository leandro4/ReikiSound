<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="13dp"
    app:cardElevation="4dp"
    android:layout_margin="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/donate_title_choose"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ca000000"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/donate_subtitle_choose"
            android:textSize="15sp"
            android:textColor="#41ccff"
            android:gravity="center"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_1"
                android:text="1$"
                android:textColor="#ffffff"
                android:background="@drawable/boton_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_5"
                android:text="5$"
                android:textColor="#ffffff"
                android:background="@drawable/boton_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_20"
                android:text="20$"
                android:textColor="#ffffff"
                android:background="@drawable/boton_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_50"
                android:text="50$"
                android:textColor="#ffffff"
                android:background="@drawable/boton_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>